<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdb.modules.crawl.dao.CrawlCompanyInfoDao">

    <resultMap id="BaseResultMap" type="com.zdb.modules.crawl.entity.CrawlCompanyInfo">
        <!--@Table crawl_company_info-->
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="companyInfo" column="company_info" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="version" column="version" jdbcType="INTEGER"/>
        <result property="flag" column="flag" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          ID, company_info, create_time, update_time, version, flag
        from zdb_financial.crawl_company_info
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          ID, company_info, create_time, update_time, version, flag
        from zdb_financial.crawl_company_info
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          ID, company_info, create_time, update_time, version, flag
        from zdb_financial.crawl_company_info
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="companyInfo != null and companyInfo != ''">
                and company_info = #{companyInfo}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="version != null">
                and version = #{version}
            </if>
            <if test="flag != null">
                and flag = #{flag}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into zdb_financial.crawl_company_info(company_info, create_time, update_time, version, flag)
        values (#{companyInfo}, #{createTime}, #{updateTime}, #{version}, #{flag})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update zdb_financial.crawl_company_info
        <set>
            <if test="companyInfo != null and companyInfo != ''">
                company_info = #{companyInfo},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="version != null">
                version = #{version},
            </if>
            <if test="flag != null">
                flag = #{flag},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from zdb_financial.crawl_company_info where ID = #{id}
    </delete>

</mapper>